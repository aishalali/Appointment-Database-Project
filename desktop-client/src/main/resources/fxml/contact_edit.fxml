<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.emergencycontact.ContactEditController"
      spacing="15"
      alignment="TOP_CENTER"
      style="-fx-padding: 20;">

    <!-- Header -->
    <Label text="Edit Emergency Contact"
           style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <!-- Form Container -->
    <GridPane hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120"/>
            <ColumnConstraints halignment="LEFT" minWidth="250"/>
        </columnConstraints>

        <!-- First Name -->
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                   promptText="Enter first name"/>

        <!-- Last Name -->
        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="Enter last name"/>

        <!-- Phone -->
        <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"
                   promptText="Enter phone number"/>

        <!-- Email -->
        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                   promptText="Enter email (optional)"/>

        <!-- Address -->
        <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"
                   promptText="Enter address (optional)"/>

    </GridPane>

    <!-- Message Label -->
    <Label fx:id="messageLabel"
           style="-fx-text-fill: red; -fx-font-size: 14px;" />


    <!-- Button Row -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Save"
                onAction="#handleSave"
                style="-fx-font-size: 14px; -fx-padding: 6 18;" />

        <Button text="Back"
                onAction="#handleBack"
                style="-fx-font-size: 14px; -fx-padding: 6 18;" />
    </HBox>

</VBox>
