<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.appointmentProject.desktop.controller.billing.BillingListController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-padding: 20;">

    <!-- Top buttons -->
    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10;">
        <Button text="Create Billing"
                style="-fx-font-size: 16px; -fx-padding: 8 16;"
                onAction="#handleCreateBilling"/>

        <Button text="Edit Billing"
                style="-fx-font-size: 16px; -fx-padding: 8 20;"
                onAction="#handleEditBilling"/>

        <Button text="Back"
                style="-fx-font-size: 16px; -fx-padding: 8 16;"
                onAction="#handleBack"/>
    </HBox>

    <!-- Search bar -->
    <TextField fx:id="searchField"
               promptText="Search billings..."
               maxWidth="300"/>

    <!-- Message label -->
    <Label fx:id="messageLabel"
           textFill="red"
           style="-fx-font-size:14px;"
           text=""/>

    <!-- Title -->
    <Label text="Billings"
           style="-fx-font-size:24px; -fx-font-weight:bold;"/>

    <!-- Table -->
    <TableView fx:id="billingsTable"
               prefWidth="800"
               prefHeight="400">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="80"/>
            <TableColumn fx:id="costCol" text="Cost" prefWidth="140"/>
            <TableColumn fx:id="statusOfPaymentCol" text="Status of Payment" prefWidth="140"/>
            <TableColumn fx:id="paymentTypeCol" text="Payment Type" prefWidth="140"/>
            <TableColumn fx:id="insuranceIdCol" text="Insurance ID" prefWidth="200"/>
        </columns>
    </TableView>

</VBox>
